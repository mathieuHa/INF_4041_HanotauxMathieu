{% extends "MHStoreBundle::layout.html.twig" %}


{% block bundle_body %}

    <h3> Visualisation d'un produit </h3>

    <hr>

    <div class="row">
        <div class="col-md-4">
            <img
                    src="{{ asset(product.image.uploadDir ~ '/' ~ product.image.url) }}"
                    alt="{{ product.image.alt }}"  height="150px"
            />
        </div>
        <div class="col-md-4">
            <h4 style="color: #528eff;">{{ product.name }}</h4>
            <i>{{ product.description }}</i>
        </div>

        <div class="col-md-2">
            Prix : {{ product.price }} €
        </div>

        <div class="col-md-2">
            {% if product.seller.id == app.user.id %}
                <a class="btn  btn-warning" href="{{ path('mh_store_edit', {'id' : product.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                {% if not product.sold %}
                    <a class="btn btn-danger" href="{{ path('mh_store_delete', {'id' : product.id}) }}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                {% endif %}
            {% else %}
                {% if not product.sold %}
                        <a class="btn btn-success" href="{{ path('mh_store_buy', {'id' : product.id}) }}"> acheter</a>
                {% else %}
                    <small class="text-muted">
                        Acheté le {{ product.soldDate | date("m/d/Y à H:m:s")}}
                    </small>
                {% endif %}
            {% endif %}
        </div>

    </div>


{% endblock %}