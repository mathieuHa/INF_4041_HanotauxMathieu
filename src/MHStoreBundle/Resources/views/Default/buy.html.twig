{% extends "MHStoreBundle::layout.html.twig" %}


{% block body %}

    <h3> Achat du produit </h3>

    <hr>

    <form action="{{ path('mh_store_buy', {'id': product.id}) }}" method="post">
        <a href="{{ path('mh_store_view', {'id': product.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour au produit
        </a>

        <input type="submit" value="Acheter" class="btn btn-success" />

        {{ form_rest(form) }}
    </form>



{% endblock %}