{% extends "MHStoreBundle::layout.html.twig" %}


{% block bundle_body %}

    <h3> Mes achats </h3>

    <hr>

    <div class="card">
    <div class="card-body">
        <br>
        {% for product in products %}
            <div class="row">
                <div class="col-md-4">
                        <img
                                src="{{ asset(product.image.uploadDir ~ '/' ~ product.image.url) }}"
                                alt="{{ product.image.alt }}" height="150px"
                        />
                    </div>
                    <div class="col-md-5">
                        <h4 style="color: #528eff;">{{ product.name }}</h4>
                        <i>{{ product.description }}</i> <br>
                        <br>
                        <small class="text-muted">
                            Acheté le {{ product.soldDate | date("m/d/Y à H:m:s")}}
                        </small>
                    </div>
                    <div class="col-md-2">
                        Prix : {{ product.price }} €
                    </div>
                    <div class="col-md-1">
                        <a  class="btn btn-primary btn-sm" href="{{ path('mh_store_view', {'id': product.id}) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                    </div>
            </div>
            <br>
            {% if not loop.last %}
                <hr>
                <br>
            {% endif %}
        {% endfor %}
    </div>
    </div>

{% endblock %}