<!Doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}The Good Deal{% endblock %}</title>
    <meta name="description" content="{% block seo %}Site web de vente d'articles entre particuliers.{% endblock %}">
    <meta name="author" content="Hanotaux Mathieu">
    <meta name="Identifier-URL" content="https://inf4041.hanotaux.fr">
    <meta name="Keywords" content="Particulier, vente, occasion">
    <meta name="Publisher" content="Hanotaux Mathieu">
    <meta http-equiv="Content-Language" content="fr">

    <meta property="og:locale" content="fr_FR"/>

    <meta property="og:type" content="website"/>
    <meta property="og:url" content="https://inf4041.hanotaux.fr"/>
    <meta property="og:site_name" content="Le Bon Deal"/>
    <meta property="og:description" content="Site web de vente d'articles entre particuliers." />
    <meta property="og:image" content="{{ asset('bundles/mhstore/assets/img/le-bon-deal.jpg') }}"/>
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="422"/>
    <meta property="og:image:height" content="600" />

    {% block stylesheets %}

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/mhstore/assets/css/main.css') }}" type="text/css">

    {% endblock %}
</head>

<body>
        <nav class="navbar navbar-expand-md navbar-dark  bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    {% if 'mh_store_home' == app.request.get('_route') %}
                        <li class="nav-item active"><a class="nav-link" href="{{ path('mh_store_home') }}">Home </a> </li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_home') }}">Home </a> </li>
                    {% endif %}
                    {% if 'mh_store_list' == app.request.get('_route') %}
                        <li class="nav-item active"><a class="nav-link" href="{{ path('mh_store_list') }}">List </a> </li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_list') }}">List </a> </li>
                    {% endif %}
                    {% if app.user %}
                        {% if 'mh_store_add' == app.request.get('_route') %}
                            <li class="nav-item active"><a class="nav-link" href="{{ path('mh_store_add') }}">Add </a> </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_add') }}">Add </a> </li>
                        {% endif %}
                        {% if 'mh_store_purchases' == app.request.get('_route') %}
                            <li class="nav-item active"><a class="nav-link" href="{{ path('mh_store_purchases') }}">Purchases </a> </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_purchases') }}">Purchases </a> </li>
                        {% endif %}
                        {% if 'mh_store_sales' == app.request.get('_route') %}
                            <li class="nav-item active"><a class="nav-link" href="{{ path('mh_store_sales') }}">My Sales </a> </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_sales') }}">My Sales </a> </li>
                        {% endif %}
                        {% if 'mh_store_buy_credit' == app.request.get('_route') %}
                            <li class="nav-item active"><a class="nav-link" href="{{ path('mh_store_buy_credit') }}">Recharge the account </a> </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_buy_credit') }}">Recharge the account </a> </li>
                        {% endif %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Settings
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="{{ path('mh_store_buy_credit') }}"> Credits : {{ app.user.credit }}</a>
                                <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Logout</a>
                                <a class="dropdown-item" href="{{ path('fos_user_change_password') }}">Change password</a>
                            </div>
                        </li>
                    {% else %}
                        {% if 'fos_user_login' == app.request.get('_route') %}
                            <li class="nav-item active"><a class="nav-link" href="{{ path('fos_user_security_login') }}">Login </a> </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('fos_user_security_login') }}">Login </a> </li>
                        {% endif %}
                    {% endif %}
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2" id="searchText" type="text" placeholder="Search" aria-label="Search">
                    <a href="#" id="searchButton" class="btn btn-outline-success my-2 my-sm-0">Search</a>
                </form>
            </div>
        </nav>

        <div id="header" class="jumbotron">

                <h1 class="display-3">
                    <a href="{{ path('mh_store_home') }}">The Good Deal</a>
                </h1>
                <p class="lead">
                    A secure sales site between individuals
                </p>
        </div>

    <div class="container">
        <div class="row">
            <div id="content" class="col-md-12 col-lg-12">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>

    <br>
    <br>

    <footer>
        <p class="text-center"> Credit :<a href="https://mathieu.hanotaux.fr"> Hanotaux Mathieu </a></p>
    </footer>

{% block javascript %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('bundles/mhstore/assets/js/main.js') }}"></script>
{% endblock %}

</body>
</html>