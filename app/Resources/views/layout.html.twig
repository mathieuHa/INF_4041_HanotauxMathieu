<!Doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Le Bon Deal{% endblock %}</title>
    <meta name="description" content="{% block seo %}Site web de vente d'articles entre particuliers.{% endblock %}">
    <meta name="author" content="Le Bon Deal">
    <meta name="Identifier-URL" content="https://inf4041.hanotaux.fr">
    <meta name="Keywords" content="Particulier, vente, occasion">
    <meta name="Publisher" content="Hanotaux Mathieu">
    <meta http-equiv="Content-Language" content="fr">

    <meta property="og:locale" content="fr_FR"/>

    <meta property="og:type" content="website"/>
    <meta property="og:url" content="https://mathieu.hanotaux.fr"/>
    <meta property="og:site_name" content="Le Bon Deal"/>
    <meta property="og:description" content="Site web de vente d'articles entre particuliers." />
    <meta property="og:image" content="{{ asset('bundles/mhstore/assets/img/le-bon-deal.jpg') }}"/>
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="422"/>
    <meta property="og:image:height" content="600" />

    {% block stylesheets %}

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/mhstore/assets/css/main.css') }}" type="text/css">

    {% endblock %}
</head>

<body>

<nav class="navbar navbar-expand-md navbar-dark  bg-dark">
    <a class="navbar-brand" href="{{ path('mh_store_home') }}">Le Bon Deal</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_home') }}">Accueil </a> </li>

            <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_list') }}">Liste </a> </li>
            {% if app.user %}
                <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_add') }}">Ajouter </a> </li>
                <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_purchases') }}">Mes Achats </a> </li>
                <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_sales') }}">Mes ventes </a> </li>
                <li class="nav-item"><a class="nav-link" href="{{ path('mh_store_buy_credit') }}">Recharger le compte </a> </li>
            {% endif %}
        </ul>
        <form class="form-inline mt-2 mt-md-0">
            <input class="form-control mr-sm-2" id="searchText" type="text" placeholder="Search" aria-label="Search">
            <a href="#" id="searchButton" class="btn btn-outline-success my-2 my-sm-0">Search</a>
        </form>
    </div>
</nav>
<div class="bg"></div>
<div id="header" class="jumbotron jumbotron-fluid">
    <div class="container-fluid">
        <h1 class="display-3">
            <a href="{{ path('mh_store_home') }}">Le Bon Deal</a>
        </h1>
        <p class="lead">
            Un site de vente sécurisé entre particuliers
        </p>
    </div>
</div>
<div class="alert alert-info"> {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    Connecté en tant que {{ app.user.username }}
    - Credits : {{ app.user.credit }}
    <div class="float-right alert-link"><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">Connexion</a>
        {% endif %}&nbsp;
    </div>
</div>

    <br>
    <div class="container-fluid">
        <div class="row">
            <div id="content" class="col-md-12 col-lg-12">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>

    <hr>

    <footer>
        <p>Hanotaux Mathieu - Webmaster du Groupe ESIEA 2017 -</p>
    </footer>

{% block javascript %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('bundles/mhstore/assets/js/main.js') }}"></script>
{% endblock %}

</body>
</html>